# Production Environment Variables
# Copy this to .env in your backend directory and update the values

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production
DJANGO_SETTINGS_MODULE=backend.production_settings

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost,127.0.0.1

# Database (for PostgreSQL in production)
# DATABASE_URL=postgresql://username:password@localhost:5432/landlord_db

# Redis (for production channel layers and caching)
REDIS_URL=redis://localhost:6379/0

# OpenAI API (if using)
# OPENAI_API_KEY=your-openai-api-key

# Email Settings (for notifications)
# EMAIL_HOST=smtp.your-provider.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@domain.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn
