# Frontend Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY front/package*.json ./
COPY front/pnpm-lock.yaml ./

# Install pnpm and dependencies
RUN npm install -g pnpm
RUN pnpm install

# Copy frontend code
COPY front/ .

# Build the application
RUN pnpm build

# Expose port
EXPOSE 3000

# Start the application
CMD ["pnpm", "start"]
