# Frontend Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY front/package*.json ./

# Install dependencies with npm
RUN npm install

# Copy frontend code
COPY front/ .

# Set build-time environment variable for Next.js
ARG NEXT_PUBLIC_WS_URL=wss://srv889806.hstgr.cloud/ws/chat/
ENV NEXT_PUBLIC_WS_URL=$NEXT_PUBLIC_WS_URL

# Build the application
RUN npm run build

# Expose port
EXPOSE 3000

# Start the application
CMD ["npm", "start"]
